{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "strictNullChecks": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@presentation/*": ["./src/presentation/*"],
      "@utils/*": ["./src/utils/*"],
    },
  }, 
  "exclude": [
    "jest.*",
    "jest-*",
    "./coverage", 
    "node_modules", 
    "dist"
  ]
}
